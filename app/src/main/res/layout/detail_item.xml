<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:background="@android:color/transparent"
                                    android:backgroundTint="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:targetApi="lollipop">


    <RelativeLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
                android:id="@+id/mListCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:checked="false"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"/>

        <LinearLayout
                android:layout_marginTop="12dp"
                android:id="@+id/Linear"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:layout_toRightOf="@id/mListCheck"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Yarın sabah erken Kalkılacak"
                    android:id="@+id/mListTitle"
                    android:textColor="@color/textİtemColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="18sp"/>

            <TextView
                    android:text="Proje ile alakalı sunumlar yapılacak"
                    android:id="@+id/mListDesc"
                    android:layout_margin="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>

        </LinearLayout>
        <View
                android:layout_below="@+id/Linear"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>