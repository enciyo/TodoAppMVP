<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:padding="14dp"
                                    android:elevation="20dp"
                                    android:layout_margin="6dp"
                                    app:cardCornerRadius="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RadioButton
                android:id="@+id/mCheck"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:checked="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@+id/mCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <TextView
                        android:text="Yarın sabah erken Kalkılacak"
                        android:id="@+id/mListTitle"
                        android:textColor="@color/textİtemColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textSize="18sp"/>

                <TextView
                        android:text="Proje ile alakalı sunumlar yapılacak"
                        android:id="@+id/mListDesc"
                        android:layout_margin="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>